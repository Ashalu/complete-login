<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#ffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardView"
        android:layout_margin="36sp"

        app:cardCornerRadius="3dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        app:cardElevation="5dp"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/ntitled4"

            android:layout_height="match_parent">
            <EditText
                android:layout_width="235dp"
                android:hint="UserName "
                android:padding="15dp"
                android:inputType="text"
                android:maxLines="1"
                android:id="@+id/username"
                android:background="@drawable/border"
                android:layout_marginTop="35dp"
                android:layout_centerHorizontal="true"
                android:layout_height="50dp" />
            <EditText
                android:layout_width="235dp"
                android:hint="email "
                android:inputType="text"
                android:maxLines="1"
                android:padding="15dp"
                android:id="@+id/email"
                android:background="@drawable/border"
                android:layout_marginTop="95dp"
                android:layout_centerHorizontal="true"
                android:layout_height="50dp" />

            <android.support.design.widget.TextInputLayout
                app:passwordToggleEnabled="true"
                android:layout_width="235dp"
                android:layout_height="59dp"
                android:id="@+id/password"

                android:layout_marginTop="145dp"
                android:layout_centerHorizontal="true"
                app:passwordToggleDrawable="@drawable/icon">

                <android.support.design.widget.TextInputEditText
                    android:layout_height="wrap_content"
                    android:layout_width="235dp"
                    android:inputType="textPassword"
                    android:hint="Password "

                    android:maxLines="1"
                    android:id="@+id/vpassword"
                    android:padding="15dp"
                    android:layout_below="@+id/email"

                    android:background="@drawable/border"
                    />




            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                app:passwordToggleEnabled="true"
                android:layout_width="235dp"
                android:layout_height="59dp"
                android:layout_marginTop="5dp"
                android:id="@+id/repassword"
                android:layout_below="@id/password"
                android:layout_centerHorizontal="true"
                app:passwordToggleDrawable="@drawable/icon">

            <android.support.design.widget.TextInputEditText
                android:layout_height="wrap_content"
                android:layout_width="235dp"
                android:id="@+id/vrepassword"
                android:maxLines="1"
                android:inputType="textPassword"
                android:hint="rePassword "

                android:padding="15dp"
                android:layout_below="@+id/password"

                android:background="@drawable/border"
                />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/button2"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="#A0A0A0"
                android:text="Submit"
                android:textColor="#fff"
android:enabled="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="34dp" />





            <Spinner
                android:id="@+id/spn"
                android:tag="country"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/repassword"
               >


            </Spinner>


            <RadioGroup
                android:id="@+id/radioSex"
                android:layout_below="@id/spn"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >


            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:layout_below="@+id/spn"
                android:layout_alignLeft="@+id/repassword"
                android:layout_alignStart="@+id/repassword"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" />


                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="12dp"
                    android:layout_above="@+id/checkBox"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


            </RadioGroup>
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I accept all term and condition"
                android:layout_above="@+id/button2"
                android:textSize="20sp"
                 />


        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>















