<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/ntitled4"
android:alpha=".75"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ntitled2"
        android:alpha="100"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ntitled1"
        android:alpha="225"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ntitled3"/>


    <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:id="@+id/cardView"

       android:layout_margin="36sp"

       app:cardCornerRadius="3dp"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="80dp"
       app:cardElevation="5dp"
       android:layout_height="280dp">


       <RelativeLayout
           android:layout_width="match_parent"
           android:background="#ff0000"
           android:layout_height="match_parent">
           <EditText
               android:layout_width="235dp"
               android:hint="UserName "
               android:padding="15dp"
               android:inputType="text"
               android:maxLines="1"
               android:id="@+id/username"
               android:background="@drawable/border"
               android:layout_marginTop="35dp"
               android:layout_centerHorizontal="true"
               android:layout_height="50dp" />

           <android.support.design.widget.TextInputLayout
               app:passwordToggleEnabled="true"
               android:layout_width="235dp"
               android:layout_height="59dp"
               android:alpha="225"
               android:layout_marginTop="95dp"
               android:id="@+id/password"
               android:layout_centerHorizontal="true"
               app:passwordToggleDrawable="@drawable/icon">

           <android.support.design.widget.TextInputEditText
               android:layout_height="wrap_content"
               android:layout_width="235dp"
               android:inputType="textPassword"
               android:hint="Password "
               android:maxLines="1"

               android:padding="15dp"
               android:layout_below="@+id/username"

               android:background="@drawable/border"
               />


           </android.support.design.widget.TextInputLayout>

           <Button
               android:id="@+id/button2"
               android:layout_width="140dp"
               android:layout_height="wrap_content"
               android:background="#0057e7"
               android:text="sign up"
               android:textColor="#fff"
               android:onClick="Action"
               android:layout_alignParentBottom="true"
               android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true"
               android:layout_marginRight="16dp"
               android:layout_marginEnd="16dp"
               android:layout_marginBottom="34dp" />

           <TextView
               android:id="@+id/forgetTextView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:textSize="18sp"
               android:layout_alignEnd="@+id/button2"
               android:layout_alignParentBottom="true"
               android:layout_alignRight="@+id/button2"
               android:layout_marginBottom="10dp"
               android:textColor="@color/colorPrimary"
               android:text="Forget PassWord?" />


       </RelativeLayout>
       <Button
           android:id="@+id/button"

           android:layout_width="140dp"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true"
           android:layout_marginTop="200dp"
           android:background="#0057e7"
           android:text="Login"
           android:textColor="#fff" />


   </android.support.v7.widget.CardView>





    </RelativeLayout>















